<header role="banner" id="fh5co-header" class='navbar-fixed-top'>
  <nav class="navbar navbar-expand-lg navbar-light py-0">

    <%= link_to "Tous au marché !", root_path, :class => "navbar-brand bg-transparent border-0" %>
    <button class="navbar-toggler js-fh5co-nav-toggle fh5co-nav-toggle border-0 mr-2" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
      <i></i>
    </button>

    <div id="navbar" class="collapse navbar-collapse row mx-1">
      <ul class="navbar-nav ml-2">
        <li class='nav-item'>
          <%= link_to root_path(anchor: "accueil"), { :'data-nav-section' => 'home', :class => 'nav-link external' } do %>
            <span>Accueil</span>
          <% end %>
        </li>
        <li class='nav-item'>
          <%= link_to new_contact_path , { :'data-nav-section' => 'contact', :class => 'nav-link external' } do %>
            <span>Contact</span>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class='nav-item'>
            <%= link_to user_path(current_user), { :'data-nav-section' => 'profile', :class => 'nav-link external' }  do %>
              <span>Mon profil utilisateur</span>
            <% end %>
          </li>
          <li class='nav-item'>
            <%= link_to "Déconnexion", destroy_user_session_path, { method: :delete, :class => 'nav-link external' } %>
          </li>
        <% elsif producer_signed_in? %>
          <li class='nav-item'>
            <%= link_to producer_path(current_producer), { :'data-nav-section' => 'profile', :class => 'nav-link external' } do %>
              <span>Mon profil producteur</span>
            <% end %>
          </li>
          <li class='nav-item'>
            <%= link_to "Déconnexion", destroy_producer_session_path, { method: :delete, :class => 'nav-link external' } %>
          </li>
        <% end %>
      </ul>
    </div>

  </nav>
</header>
